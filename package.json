        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.4.2",
        "@nestjs/typeorm": "^10.0.0",
        "axios": "^1.6.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cloudinary": "^1.41.0",
        "multer": "1.4.5-lts.1",
        "nodemailer": "^6.9.0",
        "pdf-parse": "^2.4.5",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.1.14",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.20",
        "uuid": "^13.0.0"
